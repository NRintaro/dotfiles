# alias command
alias ll='ls -la'
alias v='vim'
alias c='clear'
alias rb='rbenv'
alias brails='bundle exec rails'
alias t='tmux'

bindkey '^]' peco-src
function peco-src() {
  local src=$(ghq list --full-path | peco --query "$LBUGGER")
  if [ -n "$src" ]; then
    BUFFER="cd $src"
    zle accept-line
  fi
  zle -R -c
}
zle -N peco-src

if [ -n "$VIMRUNTIME" ]; then
  PS1='%F{green}(Vim)%f %m ðŸ˜ˆ %c %# '
else
  PS1='%m ðŸ˜ˆ %c %# '
fi
