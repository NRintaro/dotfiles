# alias command
alias ll='ls -la'
alias v='vim'
alias c='clear'

# short cut key
bindkey '^]' fzf-src
function fzf-src() {
  local src=$(ghq list --full-path | fzf --query "$LBUGGER")
  if [ -n "$src" ]; then
    BUFFER="cd $src"
    zle accept-line
  fi
  zle -R -c
}
zle -N fzf-src

# prompt
if [ -n "$VIMRUNTIME" ]; then
  PS1='%F{green}(Vim)%f %m ðŸ˜ˆ %c %# '
else
  PS1='%m ðŸ˜ˆ %c %# '
fi
